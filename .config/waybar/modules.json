{
    "hyprland/workspaces": {
        "active-only": false,
        "all-outputs": false,
        "disable-scroll": false,
        "format": "",
        "format-icons": {
            "active": "",
            "default": "",
            "sort-by-number": true,
            "urgent": ""
        },
        "persistent-workspaces": {
            "1": ["DP-1", "HDMI-A-1"],
            "2": ["DP-1", "HDMI-A-1"],
            "3": ["DP-1", "HDMI-A-1"],
            "4": ["DP-1", "HDMI-A-1"],
            "5": ["DP-1", "HDMI-A-1"],
        }
    },

    "hyprland/window": {
        "rewrite": {
            "(.*) - Firefox": "$1",
            "(.*) - kitty": "[$1]"
        },
        "separate-outputs": true
    },

    "cpu": {
        "format": "󰻠 {usage}%",
        "format-alt": "󰻠 {avg_frequency} GHz",
        "interval": 1
    },

    "memory": {
        "format": "󰍛 {used} GiB",
        "format-alt": "󰍛 {}%",
        "interval": 5
    },

    "network": {
        "on-click": "kitty -e nmtui",
        "format-disconnected": "󰖪 0%",
        "format-ethernet": "󰈀 100%",
        "format-linked": "{ifname} (No IP)",
        "format-wifi": "  {signalStrength}%",
        "tooltip-format": "Connected to {essid} {ifname} via {gwaddr}"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-icons": {
            "default": [
                "󰕿",
                "󰖀",
                "󰕾"
            ]
        },
        "format-muted": "󰝟",
        "on-click": "pavucontrol",
        "scroll-step": 5
    },

    "disk": {
        "interval": 60,
        "format": " {percentage_used}%|{used}",
    },

    "clock": {
        "format": "{:%a %d %b %I:%M}",
        "format-alt": "{:%I:%M}",
        "tooltip": "true",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "tray": {
        "icon-size": 20,
        "spacing": 2
    },

    "custom/launcher": {
        "format": "{icon}Apps",
        "format-icons": "󰣇 ",
        "on-click": "rofi -show drun -show-icons"
    },

    "custom/cycle":{
        "format":"  Wallpapers",
        "exec": "echo ; echo 󰸉 wallpaper select",
        "on-click": "~/.config/hypr/scripts/wallpaper-select.sh",
        "interval" : 86400, // once every day
        "tooltip": true,
    },

    "custom/wlogout": {
        "format": "{icon}",
        "format-icons": " ",
        "on-click": "wlogout",
    },

    "group/system": {
        "orientation": "horizontal",
        "modules": [
            "disk",
            "network",
            "memory",
            "cpu",
        ]
    },
}
